generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Event {
  id          String @unique @id @default(cuid())
  name        String
  date        DateTime
  description String
  duration    Int
  guestcount  Int
  maxcount    Int
  slots       Timeslot[]
  response    Response[]
  alt         AltResponse?
}

model Timeslot {
  id        String @unique @id @default(cuid())
  name      String
  time      DateTime
  duration  Int 
  eventID   String 
  event     Event @relation(fields: [eventID], references: [id], onDelete: Cascade)
  maxcount  Int
  filled    Int @default(0)
  open      Boolean @default(true)
  response  Response[]
}

model Response {
  id          String @unique @id @default(cuid())
  firstName   String
  lastName    String
  email       String 
  guestcount  Int
  checkin     Boolean @default(false)
  slotID      String
  timeslot    Timeslot @relation(fields: [slotID], references: [id], onDelete: Cascade)
  eventID     String 
  event       Event @relation(fields: [eventID], references: [id], onDelete: Cascade)
}

model AltResponse {
  id          String @unique @id @default(cuid())
  firstName   String
  lastName    String
  email       String 
  phone       Int?
  comment     String?
  eventID     String @unique
  event       Event @relation(fields: [eventID], references: [id], onDelete: Cascade)
}
